<Window x:Class="EM_Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EM_Lab_1"
        mc:Ignorable="d"
        Title="Емпіричні методи: лабораторна робота 1" Height="600" Width="960">
    <Grid>
        <TabControl>
            <TabItem x:Name="MainTab" Header="Головна" FontSize="20">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="LoadDataButton" Content="Завантажити дані" HorizontalAlignment="Center" VerticalAlignment="Center" Height="229" Width="734" FontSize="25" Click="LoadDataButtonClickHandler"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="FirstSelectionTab" Header="Перша вибірка" FontSize="20">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="SecondSelectionTab" Header="Друга вибірка" FontSize="20">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="BothSelectionsTab" Header="Обидві вибірки" FontSize="20">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
