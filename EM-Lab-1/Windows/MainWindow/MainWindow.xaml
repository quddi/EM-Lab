<Window x:Class="EM_Lab_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EM_Lab_1"
        mc:Ignorable="d"
        Title="Емпіричні методи: лабораторна робота 1" Height="600" Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem x:Name="MainTab" Header="Головна" FontSize="20">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="LoadDataButton" Content="Завантажити дані" HorizontalAlignment="Center" VerticalAlignment="Center" Height="229" Width="734" FontSize="25" Click="LoadDataButtonClickHandler"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="OneSelectionTab" Header="Одна вибірка" FontSize="20" Height="31" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="SelectionComboBox" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="183" SelectedIndex="0" Height="40" SelectionChanged="SelectionComboBoxSelectionChangedHandler">
                        <ComboBoxItem Content="Перша вибірка"/>
                        <ComboBoxItem Content="Друга вибірка"/>
                    </ComboBox>
                    <TextBox x:Name="MedianTextBox" Margin="234,190,440,0" TextWrapping="Wrap" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Height="57" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="StandardDeviationTextBox" Margin="234,247,440,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="58" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="SkewnessTextBox" Margin="234,305,440,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="KurtosisTextBox" Margin="234,362,440,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="MeanIntervalTextBox" HorizontalAlignment="Right" Margin="0,133,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="429" Height="57" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <TextBox x:Name="MedianIntervalTextBox" HorizontalAlignment="Right" Margin="0,190,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="429" Height="57" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="StandardDeviationIntervalTextBox" HorizontalAlignment="Right" Margin="0,247,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="429" Height="58" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="SkewnessIntervalTextBox" HorizontalAlignment="Right" Margin="0,305,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="429" Height="57" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="KurtosisIntervalTextBox" HorizontalAlignment="Right" Margin="0,362,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="429" Height="57" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox Margin="234,75,440,0" TextWrapping="Wrap" Text="Точкова оцінка" VerticalAlignment="Top" Height="58" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                    <TextBox HorizontalAlignment="Right" Margin="0,75,11,0" TextWrapping="Wrap" Text="Інтервальна оцінка" VerticalAlignment="Top" Width="429" Height="58" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox Margin="11,75,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="58" VerticalAlignment="Top" HorizontalAlignment="Left" Width="223" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" CaretBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox HorizontalAlignment="Left" Margin="11,133,0,0" TextWrapping="Wrap" Text="Середнє арифметичне" VerticalAlignment="Top" Width="223" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox x:Name="MeanTextBox" Margin="234,133,440,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox HorizontalAlignment="Left" Margin="11,190,0,0" TextWrapping="Wrap" Text="Медіана" VerticalAlignment="Top" Width="223" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" CaretBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox HorizontalAlignment="Left" Margin="11,247,0,0" TextWrapping="Wrap" Text="Середньоквадратичне відхилення" VerticalAlignment="Top" Width="223" Height="58" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                    <TextBox HorizontalAlignment="Left" Margin="11,305,0,0" TextWrapping="Wrap" Text="Коефіцієнт ексцесу" VerticalAlignment="Top" Width="223" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"/>
                    <TextBox HorizontalAlignment="Left" Margin="11,362,0,0" TextWrapping="Wrap" Text="Коефіцієнт асиметрії" VerticalAlignment="Top" Width="223" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="BothSelectionsTab" Header="Обидві вибірки" FontSize="20">
                <Grid Background="#FFE5E5E5">
                    <WpfPlot x:Name="CorrelationFieldPlot" Height="545" Width="477" VerticalAlignment="Top" Margin="477,0,0,0" HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
